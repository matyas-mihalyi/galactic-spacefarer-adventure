  "scripts": {
    "start": "cds-serve",
    "build": "cds build && cds-typer",
    "init:db": "cds deploy --to sqlite:db/spacefarer.db",
    "client:watch": "cds watch --open galactic-spacefarer-adventures-ui/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db/spacefarer.db"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "user1": {
            "password": "password",
            "roles": [
              "SpacefarerViewer"
            ],
            "attr": {
              "originPlanet": "Kepler-442b"
            }
          },
          "user2": {
            "password": "password",
            "roles": [
              "SpacefarerViewer"
            ],
            "attr": {
              "originPlanet": "Planet Y"
            }
          },
          "admin": {
            "password": "password",
            "roles": [
              "SpacefarerAdmin"
            ],
            "attr": {
              "originPlanet": "doesn't matter"
            }
          }
        }
      }
    }
  },
  "sapux": [
    "app/galactic-spacefarer-adventures-ui"
  ]
}
